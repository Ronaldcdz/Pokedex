@model Application.ViewModels.SavePokemonTypeViewModel
@{
    ViewData["Title"] = "Delete Type";
}

<div class="row">

    <div class="col-6 offset-3">

        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>Are you sure you want to delete the type: "@Model.Name"</h4>

            </div>
            <div class="card-body">

                <form method="post" asp-controller="PokemonType" asp-action="DeletePost">

                    <input type="hidden" asp-for="Id" />

                    <a asp-controller="PokemonType" asp-action="Index" class="btn btn-warning">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete</button>

                </form>

            </div>
        </div>

    </div>

</div>
