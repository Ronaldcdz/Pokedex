@model List<Application.ViewModels.PokemonViewModel>
@{
    ViewData["Title"] = "Pokemons";
}

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Pokemon" asp-action="Create" class="btn btn-outline-success">Add a new Pokemon</a>
        </div>
    </div>

    <div class="row">

        




        @if (Model == null || Model.Count == 0)
        {

            <h2>There is no Pokemons Created</h2>
        }
        else
        {

            @foreach (Application.ViewModels.PokemonViewModel pokemon in Model)
            {

                <div class="col-4">
                    <div class="card shadow-sm mb-3">
                        <img class="bd-placeholder-img card-img-top" src="@pokemon.ImagePath" />

                        <div class="card-body">
                            <h4>Name: @pokemon.Name</h4>
                            <p class="card-text">Region: @pokemon.Region.Name</p>
                            <p class="card-text">
                                Primary Type: @if (@pokemon.TypePrimary == null) { }
                                else
                                {
                                    @pokemon.TypePrimary.ToString()
                                }
                            </p>
                            <p class="card-text">
                                Secondary Type: @if (@pokemon.TypeSecondary == null) { }
                                else
                                {
                                    @pokemon.TypeSecondary.ToString()
                                }
                            </p>

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Pokemon" asp-action="Edit" asp-route-id="@pokemon.Id" class="btn btn-sm btn-outline-info">Edit</a>
                                    <a asp-controller="Pokemon" asp-action="Delete" asp-route-id="@pokemon.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            }

        }





    </div>

</div>
