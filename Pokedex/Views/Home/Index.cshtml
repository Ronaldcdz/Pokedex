@model List<Application.ViewModels.PokemonViewModel>
@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid">

    <div class="row">

        @if (Model == null || Model.Count == 0) {

            <h2>There is no Pokemons Created</h2>
        }
        else {

            @foreach(Application.ViewModels.PokemonViewModel pokemon in Model) {

                <div class="col-4">
                    <div class="card shadow-sm mb-3">
                        <img class="bd-placeholder-img card-img-top" src="@pokemon.ImagePath"/>

                        <div class="card-body">
                            <h4>Name: @pokemon.Name</h4>
                            <p class="card-text">Region: @pokemon.Region.Name</p>


                            <p class="card-text">
                                Primary Type: @if (@pokemon.TypePrimary == null) { }
                                else
                                {
                                    @pokemon.TypePrimary.ToString()
                                }
                            </p>
                            <p class="card-text">Secondary Type: @if (@pokemon.TypeSecondary == null) { }
                                else
                                {
                                    @pokemon.TypeSecondary.ToString()
                                }</p>

                           

                            <div class="d-flex justify-content-between align-items-center">
                            </div>
                        </div>
                    </div>
                </div>
            }

        }

        
        

  
    </div>

</div>
